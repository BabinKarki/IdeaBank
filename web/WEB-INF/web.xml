<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>userDetails</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userDetails</servlet-name>
        <url-pattern>/userDetails</url-pattern>
    </servlet-mapping>

    <servlet>
       <servlet-name>user</servlet-name>
       <servlet-class>controller.UserServlet</servlet-class>
   </servlet>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
<servlet-mapping>
    <servlet-name>user</servlet-name>
    <url-pattern>/home</url-pattern>
</servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ideas</servlet-name>
        <servlet-class>controller.IdeaServlet</servlet-class>
    </servlet>

<servlet-mapping>
    <servlet-name>ideas</servlet-name>
    <url-pattern>/ideaList</url-pattern>
</servlet-mapping>

    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>controller.IdeaServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>idea</servlet-name>
        <servlet-class>controller.IdeaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>idea</servlet-name>
        <url-pattern>/idea</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ideas</servlet-name>
        <url-pattern>/deleteIdea</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ideas</servlet-name>
        <url-pattern>/editIdea</url-pattern>
    </servlet-mapping>

</web-app>